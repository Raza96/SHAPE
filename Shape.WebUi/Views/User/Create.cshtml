@model Shape.WebUi.Models.User

@{
    ViewData["Title"] = "Create";
}

<h1>Create SHAPE account</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control"  pattern="[A-Za-z]{12}"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" pattern="[A-Za-z]{12}"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pwd" class=" control-label">Password</label>
                <div class="">
                    <input asp-for="Pwd" id="password-field" type="password" class="form-control" name="password" pattern="((?=.*\d)(?=.*[A-Z])(?=.*\W).{8,8})">
                    <span  asp-validation-for="ConfirmPwd" toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPwd" class="control-label">Confirm Password</label>
                <div class="">
                    <input asp-for="ConfirmPwd" id="ConfirmPwd-field" type="password" class="form-control" name="ConfirmPwd" >
                    <span asp-validation-for="ConfirmPwd" toggle="#ConfirmPwd-field" class="fa fa-fw fa-eye field-icon toggle-ConfirmPwd"></span>
                </div>
            </div>
